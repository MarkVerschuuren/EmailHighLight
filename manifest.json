{
  // Required
  "manifest_version":2,
  "name": "EmailHighLight",
  "version": "1.0",
  "permissions":[
    "storage",
    "notifications",
    "contextMenus"
  ],

  // Recommended
  "description": "A plain text description",
  "background" :{
    "scripts": ["background.js"],
    "persistent" : true
  },

  // Browser action
  "browser_action":{
    "default_icon": "Logo.PNG",
    "default_popup": "popup.html"
  },
  "options_page" : "options.html"

}
